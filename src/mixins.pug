mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, alt, className)
  img(src=require(`images/${path}`) alt=alt class=className)

mixin navigation
  nav.menu  
   - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
     ul.menu__list
      each item in menu
        li.menu__item 
          a.menu__link #{item} 

mixin socials
  - var socials = ["insta", "vk", "github"];
    ul.socials
     each item in socials
        li.socials__item
          a.socials__link
          +icon(item, "socials__icon")